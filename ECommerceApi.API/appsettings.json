{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "PostgreConnection": "Host=127.0.0.1;Port=5432;Database=ECommerceDb;Username=postgres;Password=123"
  },
  "JwtSettings": {
    "SecretKey": "istediginiz_sifreyi_kullanabilirsiniz_1_2_3",
    "Issuer": "ECommerceApi",
    "Audience": "ECommerceApiUser",
    "AccessTokenExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 1
  }
}
